<% include partials/_head %>
<nav>
  <div class="nav-wrapper">
    <a href="#" class="brand-logo center">TinyApp</a>
  </div>
</nav>
<div class="row center" style="padding-top:50px">
  <div class="col s12 m12 l12">
    <div class="card-panel">
      <div class="row">
      <form class="col s12" action="/login" method="POST">
        <h4 class="header2">Log In</h4>
        <div class="row">
          <div class="input-field col s4">
            <i class="mdi-action-account-circle prefix"></i>
            <input id="icon_prefix" id="email", type="email", name="email" class="validate">
            <label for="icon_prefix" class="">Email</label>
          </div>
          <div class="input-field col s4">
            <i class="mdi-action-lock-outline prefix"></i>
            <input id="icon_password" type="password" id="password", name="password" class="validate">
            <label for="icon_password">Password</label>
          </div>
          <div class="input-field col s4">
            <div class="input-field col s12">
              <input class="btn cyan waves-effect waves-light" type="submit" name="action" value="Login"><i class="mdi-action-lock-open"></i>
            </div>
          </div>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>
<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Don't have an account?</span>
          <p>Register below to create your own shortened URLs!</p>
        </div>
        <div class="card-action">
           <form method="GET" action="/register">
               <input class="btn cyan waves-effect waves-light" type="submit" name="register" value="Register"><i class="mdi-action-lock-open"></i>
          </form>
        </div>
      </div>
    </div>
  </div>
<% include partials/_footer %>